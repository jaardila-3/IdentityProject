@model LoginViewModel
@{
    ViewData["Title"] = "Acceso de usuario";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title text-center">Acceso de usuario</h3>
        <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            @Html.AntiForgeryToken()

            <div class="row mt-4">
                <div class="col-sm-6">

                    <div class="mb-3">
                        <label class="col-md-4" asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" placeholder="Ingresa el nombre de usuario">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="col-md-4" asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" placeholder="Ingresa la contraseña">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <div class="custom-check">
                            <label class="col-md-4" asp-for="RememberMe">
                                <input asp-for="RememberMe">
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>

                </div>

                <div class="col-sm-4 offset-2">

                    <h3>Aquí acceso aplicaciones externas</h3>

                </div>

            </div>

            <div class="row">
                <div class="col-sm-6">
                    <button type="submit" class="btn btn-primary w-100 btn-lg">Acceder <i
                            class="bi-arrow-right-circle-fill"></i></button>
                    <p class="mt-3"><a asp-action="Register">¿Registrarse como un nuevo usuario?</a></p>
                    <p><a asp-action="ForgotPassword">¿Olvidó la contraseña?</a></p>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}