@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Recuperar contraseña";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title text-center">Recuperar contraseña de usuario</h3>
        <form asp-controller="Account" asp-action="ResetPassword" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            @Html.AntiForgeryToken()
            <!--password recovery code-->
            <input type="hidden" asp-for="Code">

            <div class="row mt-4">
                <div class="col-sm-6 offset-3">

                    <div class="mb-3">
                        <label class="col-md-4" asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" placeholder="Ingresa el correo electrónico">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="col-md-4" asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" placeholder="Ingresa la contraseña">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="col-md-4" asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control"
                            placeholder="Ingresa la confirmación de la contraseña">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                </div>

            </div>

            <div class="row">
                <div class="col-sm-6 offset-3">
                    <button type="submit" class="btn btn-primary w-100 btn-lg">Recuperar contraseña <i
                            class="bi-arrow-right-circle-fill"></i></button>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}