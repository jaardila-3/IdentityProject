@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    ViewData["Title"] = "Crear Nuevo Rol";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title text-center">Crear Nuevo Rol</h3>
        <form asp-controller="Roles" asp-action="Create" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            @Html.AntiForgeryToken()
            <div class="row mt-4">
                <div class="col-12 col-md-8 offset-md-2">

                    <div class="mb-3">
                        <label class="col-md-4" asp-for="Name">Nombre del rol</label>
                        <input asp-for="Name" class="form-control" placeholder="Ingresa el nombre del nuevo rol">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-sm-8 offset-md-2">
                            <button type="submit" class="btn btn-primary w-100 btn-lg">Crear Rol <i
                                    class="bi-arrow-right-circle-fill"></i></button>
                        </div>
                    </div>


                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}