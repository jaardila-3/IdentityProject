@model UserClaimsViewModel

@{
    ViewData["Title"] = "Permiso de Usuario";
}

<form method="post" asp-controller="User" asp-action="ManageUserClaims">
    @Html.AntiForgeryToken()
    <div class="text-danger" asp-validation-summary="All"></div>
    <input type="hidden" asp-for="UserId">
    <div class="card">
        <div class="card-header text-center">
            <h3>Asignar permisos al usuario</h3>
        </div>
        <div class="card-body d-flex justify-content-center">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="m-3 form-check form-check-inline">
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                    <input type="checkbox" class="form-check-input" asp-for="@Model.Claims[i].Selected" />
                    <label class="form-check-label" asp-for="@Model.Claims[i].Selected">@Model.Claims[i].ClaimType</label>
                </div>
            }
        </div>
        <div class="card-footer d-flex justify-content-center">
            <button type="submit" class="btn btn-success w-50">Asignar permisos</button>
        </div>
    </div>
</form>