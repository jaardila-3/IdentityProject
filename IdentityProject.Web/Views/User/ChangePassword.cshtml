@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title text-center">Cambiar Contraseña</h3>
        <form asp-controller="User" asp-action="ChangePassword" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            @Html.AntiForgeryToken()

            <div class="row mt-4">

                <div class="col-md-6 offset-md-3 col-12">

                    <div class="mb-3">
                        <label class="col-md-4" asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" placeholder="Ingresa la contraseña">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="col-md-4" asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control"
                            placeholder="Ingresa la confirmación de la contraseña">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                </div>

            </div>

            <div class="row">
                <div class="col-md-6 offset-md-3 col-12">
                    <button type="submit" class="btn btn-danger w-100 btn-lg">Cambiar Contraseña <i
                            class="bi bi-arrow-right-circle-fill"></i></button>
                </div>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}